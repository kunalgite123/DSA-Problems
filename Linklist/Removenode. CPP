#include <iostream>
using namespace std;

struct ListNode {
    int val;
    ListNode* next;

    ListNode(int x) {
        val = x;
        next = NULL;
    }
};

// Remove Nth node from end
ListNode* removeNthFromEnd(ListNode* head, int n) {

    ListNode* dummy = new ListNode(0);
    dummy->next = head;

    ListNode* first = dummy;
    ListNode* second = dummy;

    // Move first pointer n+1 steps ahead
    for (int i = 0; i <= n; i++) {
        first = first->next;
    }

    // Move both pointers until first becomes NULL
    while (first != NULL) {
        first = first->next;
        second = second->next;
    }

    // Delete the nth node from end
    ListNode* temp = second->next;
    second->next = second->next->next;
    delete temp;

    head = dummy->next;
    delete dummy;

    return head;
}

// Print Linked List
void printList(ListNode* head) {
    while (head != NULL) {
        cout << head->val << " ";
        head = head->next;
    }
    cout << endl;
}

// Insert at end
void insertAtEnd(ListNode* &head, int value) {
    ListNode* newNode = new ListNode(value);

    if (head == NULL) {
        head = newNode;
        return;
    }

    ListNode* temp = head;
    while (temp->next != NULL) {
        temp = temp->next;
    }
    temp->next = newNode;
}

int main() {
    ListNode* head = NULL;

    int size;
    cout << "Enter size of linked list: ";
    cin >> size;

    cout << "Enter elements: ";
    for (int i = 0; i < size; i++) {
        int x;
        cin >> x;
        insertAtEnd(head, x);
    }

    int n;
    cout << "Enter n (node to remove from end): ";
    cin >> n;

    cout << "Original List: ";
    printList(head);

    head = removeNthFromEnd(head, n);

    cout << "After Removing: ";
    printList(head);

    return 0;
}
